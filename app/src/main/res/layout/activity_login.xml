<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="com.example.admin.estoquescan.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/imgIcon"
            android:contentDescription="@string/descriptorLogo"
            android:layout_width="@dimen/imageWidth"
            android:layout_height="@dimen/imageHeight"
            app:srcCompat="@drawable/logo"
            android:layout_gravity="center|center_horizontal"/>

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/hintTextUsername"
            android:layout_marginTop="50sp"/>

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/hintTextPassword"
            android:layout_marginTop="15sp"/>

        <CheckBox
            android:id="@+id/checkRemember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkBoxRememberMe"
            android:layout_marginTop="15sp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonLogin"
            android:layout_marginTop="50sp" />
    </LinearLayout>

</ScrollView>
